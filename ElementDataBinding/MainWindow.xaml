<Window x:Class="ElementDataBinding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ElementDataBinding"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Slider x:Name="slider" Width="120" RenderTransformOrigin="0.539,0.5" Margin="340,260,340,130" Maximum="50" Minimum="15"/>
        <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="170,10,170,212" FontSize="{Binding Value, ElementName=slider}"/>

    </Grid>
</Window>
